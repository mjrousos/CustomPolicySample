<h1>Sign In</h1>
<div>
    <form asp-controller="Account" asp-action="Signin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
        <div>
            <label>User Name</label>
            <input id="UserName" type="text" name="userName" />
        </div>

        <div>
            <button type="submit">Sign In</button>
        </div>
    </form>
</div>